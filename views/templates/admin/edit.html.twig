{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
    <section class="row justify-content-center">
        <section class="col-xl-10">
            <section class="card">
                <header class="card-header">
                    <h3 class="d-inline-block card-header-title">
                        <i class="material-icons">
                            {{ form.vars.value.id_ad_videoblock is not defined ? ' add_circle_outline' : 'edit' }}
                        </i>
                        {{ (form.vars.value.id_ad_videoblock is not defined ? 'New' : 'Edit') ~ ' Video Block' | trans({}, 'Modules.Advideoblock.Admin') }}
                    </h3>
                </header>
                {{ form_start(form) }}
                    <article class="card-block row">
                        <div class="card-text">
                            {{ form_row(form.id_category) }}
                            {{ form_row(form.title) }}
                            {{ form_row(form.subtitle) }}
                            {{ form_row(form.url) }}
                            {{ form_row(form.description) }}
                            {{ form_row(form.options) }}
                            {{ form_row(form.fullscreen) }}
                            {{ form_row(form.active) }}
                        </div>
                    </article>
                    <footer class="card-footer">
                        <div class="d-flex justify-content-between">
                            <a href="{{ url('admin_ad_videoblock_index') }}" class="btn btn-secondary">
                                {{ 'Cancel' | trans({}, 'Modules.Advideoblock.Admin') }}
                            </a>
                            <button class="btn btn-{{ form.vars.value.id_ad_videoblock is not defined ? 'primary' : 'warning' }}">
                                {{ (form.vars.value.id_ad_videoblock is not defined ? 'Save' : 'Edit') | trans({}, 'Modules.Advideoblock.Admin') }}
                            </button>
                        </div>
                    </footer>
                {{ form_end(form) }}
            </section>
        </section>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('/modules/ad_videoblock/views/js/edit.bundle.js') }}"></script>
{% endblock %}

